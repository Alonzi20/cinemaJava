            <column name="cast" type="VARCHAR(1000)"/>
            <column name="director" type="VARCHAR(100)"/>
            <column name="adult" type="BOOLEAN"/>
        </createTable>
    </changeSet>

    <!-- Creazione tabella Proiezione -->
